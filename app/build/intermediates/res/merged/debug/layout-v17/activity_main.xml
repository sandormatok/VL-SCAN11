<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.google.android.gms.oem.raktar.atvetel.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/toptextView"
        android:layout_height="wrap_content"
        android:background="#1a1a1a"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold"
        android:textColor="@android:color/darker_gray" />


    <View android:id="@+id/fakeView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/read_barcode"
        android:id="@+id/read_barcode"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:background="?attr/colorButtonNormal"
        android:layout_alignRight="@+id/fakeView"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="2dp"
        android:layout_alignEnd="@+id/fakeView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/enter_barcode"
        android:id="@+id/enter_barcode"
        android:textSize="20sp"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:background="?attr/colorButtonNormal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/fakeView"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="4dp"
        android:layout_toEndOf="@+id/fakeView" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/use_flash"
        android:id="@+id/use_flash"

        android:checked="false"
        android:layout_above="@+id/enter_barcode"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="18dp" />

<!--  -->
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/auto_focus"
        android:id="@+id/auto_focus"
        android:checked="false"
        android:layout_above="@+id/read_barcode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:layout_alignTop="@+id/use_flash" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remote_DB"
        android:layout_marginBottom="12dp"
        android:id="@+id/remote_db"
        android:layout_above="@+id/use_flash"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toptextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textview_akcio"
        android:minLines="3"
        android:background="#ff0000"
        android:layout_marginBottom="10dp"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:stretchColumns="1"
        android:layout_below="@+id/textview_akcio"
        android:layout_alignLeft="@+id/read_barcode"
        android:layout_alignStart="@+id/read_barcode">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_margin="1dp"
                android:id="@+id/table01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#212121"
                android:text="EAN"
                android:padding="8dip"
                android:textColor="@android:color/darker_gray"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_margin="1dp"
                android:id="@+id/table02"
                android:background="#212121"
                android:padding="8dip"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="normal|bold" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_margin="1dp"
                android:id="@+id/table11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#212121"
                android:padding="8dip"
                android:text="MÁRKA"
                android:textColor="@android:color/darker_gray"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textStyle="normal|bold" />
            <TextView
                android:layout_margin="1dp"
                android:id="@+id/table12"
                android:background="#212121"
                android:padding="8dip"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="normal|bold" />

    </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_margin="1dp"
                android:id="@+id/table21"
                android:minLines="3"
                android:layout_width="match_parent"
                android:layout_weight="0"
                android:layout_height="match_parent"
                android:background="#212121"

                android:text=" \nTERMÉK\n "
                android:textColor="@android:color/darker_gray"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_margin="1dp"
                android:id="@+id/table22"
                android:minLines="3"
                android:background="#212121"

                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/white" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_margin="1dp"
                android:id="@+id/table31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#212121"
                android:padding="8dip"
                android:text="NETTÓ"
                android:textColor="@android:color/darker_gray"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textStyle="normal|bold" />
            <TextView
                android:layout_margin="1dp"
                android:id="@+id/table32"
                android:background="#212121"
                android:padding="8dip"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="normal|bold" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_margin="1dp"
                android:id="@+id/table41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#212121"
                android:padding="8dip"
                android:text="BRUTTÓ"
                android:textColor="@android:color/darker_gray"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_margin="1dp"
                android:id="@+id/table42"
                android:background="#212121"
                android:padding="8dip"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="normal|bold" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_margin="1dp"
                android:id="@+id/table51"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#212121"
                android:padding="8dip"
                android:text="KÉSZLET"
                android:textColor="@android:color/darker_gray"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textStyle="normal|bold" />
            <TextView
                android:layout_margin="1dp"
                android:id="@+id/table52"
                android:background="#212121"
                android:padding="8dip"

                android:textColor="#ffffff"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="normal|bold" />

        </TableRow>



</TableLayout>


</RelativeLayout>
