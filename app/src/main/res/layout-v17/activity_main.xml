<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.google.android.gms.oem.raktar.atvetel.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/toptextView"
        android:text="Nyomj meg alul egy gombot..."
        android:layout_height="50dp"
        android:background="#b40027"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <View android:id="@+id/fakeView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/read_barcode"
        android:id="@+id/read_barcode"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:background="?attr/colorButtonNormal"
        android:layout_alignRight="@+id/fakeView"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="2dp"
        android:layout_alignEnd="@+id/fakeView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/enter_barcode"
        android:id="@+id/enter_barcode"
        android:textSize="20sp"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:background="?attr/colorButtonNormal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/fakeView"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="4dp"
        android:layout_toEndOf="@+id/fakeView" />


    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/use_flash"
        android:id="@+id/use_flash"

        android:checked="false"
        android:layout_above="@+id/enter_barcode"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="18dp" />

<!--  -->
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/auto_focus"
        android:id="@+id/auto_focus"
        android:checked="false"
        android:layout_above="@+id/read_barcode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:layout_alignTop="@+id/use_flash" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remote_DB"
        android:layout_marginBottom="12dp"
        android:id="@+id/remote_db"
        android:layout_above="@+id/use_flash"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:minLines="4"
        android:textSize="30sp"
        android:id="@+id/barcode_value2"
        android:textStyle="normal|bold"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_below="@+id/barcode_value"
        android:layout_toStartOf="@+id/use_flash"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/barcode_value"
        android:minLines="4"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:layout_toStartOf="@+id/fakeView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/toptextView" />


</RelativeLayout>
