<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b5b7b9"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context="com.google.android.gms.oem.raktar.atvetel.MainActivity">

    <TextView
        android:layout_marginBottom="1dp"
        android:layout_width="wrap_content"
        android:id="@+id/toptextView"
        android:layout_height="wrap_content"
        android:background="#b5b7b9"
        android:textAlignment="center"
        android:textSize="18sp"
        android:padding="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold"
        android:textColor="?android:attr/textColorPrimary" />


    <View android:id="@+id/fakeView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/read_barcode"
        android:id="@+id/read_barcode"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold"
        android:layout_alignRight="@+id/fakeView"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="2dp"
        android:layout_alignEnd="@+id/fakeView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/enter_barcode"
        android:id="@+id/enter_barcode"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/fakeView"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="4dp"
        android:layout_toEndOf="@+id/fakeView" />

    <!--

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toptextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textview_akcio"
        android:minLines="3"
        android:background="#d50000"
        android:layout_marginBottom="10dp"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    -->

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remote_DB"
        android:id="@+id/remote_db"
        android:layout_above="@+id/enter_barcode"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:stretchColumns="1"
        android:layout_below="@+id/toptextView"
        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true"
        android:layout_above="@+id/read_barcode">


        <TableRow
            android:id="@+id/tableRow0"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
