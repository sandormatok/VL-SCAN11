<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#b5b7b9"
    tools:context="com.google.android.gms.oem.raktar.vlscan.MainActivity">


    <View android:id="@+id/fakeView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"/>

    <!--
    <View android:id="@+id/fakeView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="#FF3F78C6"
        android:layout_below="@+id/tableLayout1" />
        -->

    <TextView

        android:layout_width="wrap_content"
        android:id="@+id/toptextView"
        android:textAllCaps="true"
        android:layout_height="wrap_content"
        android:background="#b5b7b9"
        android:textAlignment="center"
        android:textSize="16sp"
        android:padding="4dp"
        android:textStyle="normal|bold"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/read_barcode"
        android:id="@+id/read_barcode"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold"
        android:layout_alignRight="@+id/fakeView"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="2dp"
        android:layout_alignEnd="@+id/fakeView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/enter_barcode"
        android:id="@+id/enter_barcode"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/fakeView"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="4dp"
        android:layout_toEndOf="@+id/fakeView" />

    <!--  -->
    <ListView
        android:id="@+id/itemListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bolt_spinner"
        android:textSize="20sp">
    </ListView>




</RelativeLayout>
